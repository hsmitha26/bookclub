<h1>All Books</h1>

<% @books.each do |book| %>
  <section id="book-<%= book.id %>">
    <p><%= book.title %></p>
    <p><%= book.pages %></p>
    <p><%= book.publication_year %></p>
    <% book.authors.each do |author| %>
      <p><%= author.name %></p>
    <% end %>
    <p>Average Rating: <%=book.avg_rating%></p>
    <p>Number of Reviews: <%=book.reviews_count%></p>
  </section>
<% end %>
