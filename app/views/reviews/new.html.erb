<%= form_for [@book, @review] do |f| %>
  <p> <%= f.label :user%> </p>
  <%= f.text_field :user %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>
